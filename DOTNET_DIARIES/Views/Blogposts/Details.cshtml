@model DOTNET_DIARIES.Models.Blogpost
@{
    ViewData["Title"] = @Model.Title;
}

<div class="container">
    <h1 class="text-center">@Model.Title</h1>

    <div class="row text-center mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-center">
                <img src="@Model.ImageUrl" alt="Blogpost Image" class="img-fluid" style="max-width:600px; max-height:400px; width:100%; height:auto; object-fit:cover;"/>
            </div>
            <div class="d-flex justify-content-center">
                <p>@Model.PostedDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="mb-3">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Blogposts")" class="btn btn-primary">Back to Blogposts</a>
        </div>
    </div>